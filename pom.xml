<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>at.sti2.ngsee</groupId>
	<artifactId>sesa-project</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>invoker</module>
		<module>registration</module>
		<module>discovery</module>
		<module>monitoring</module>
		<module>util</module>
	</modules>

	<name>sesa-project</name>
	<url>http://sesa.sti2.at</url>


	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<issueManagement>
		<system>Sourceforge</system>
		<url>http://sesa.sti2.at</url>
	</issueManagement>

	<organization>
		<name>Semantic Technology Institute Innsbruck</name>
		<url>http://sesa.sti2.at</url>
	</organization>

	<developers>
		<developer>
			<name>Michael Rogger</name>
		</developer>
		<developer>
			<name>Alex Oberhauser</name>
		</developer>
		<developer>
			<name>Corneliu Stanciu</name>
		</developer>
	</developers>

	<!-- DISTRIBUTION MANAGEMENT -->
	<distributionManagement>
		<snapshotRepository>
			<id>sti2-archiva-snapshots</id>
			<name>STI snapshot distribution</name>
			<url>http://maven.sti2.at/archiva/repository/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>sti2-archiva-external</id>
			<name>STI release distribution</name>
			<url>http://maven.sti2.at/archiva/repository/external</url>
		</repository>
	</distributionManagement>


	<scm>
		<connection>scm:git:ssh://sesa.sti2.at:/var/scm/see/sesa.git</connection>
		<!-- <url>scm:git:ssh://sesa.sti2.at:/var/scm/see/sesa.git</url> -->
		<!-- <developerConnection>scm:git:git@github.com:tobrien/git-demo.git</developerConnection> -->
	</scm>

	<!-- REPOSITORIES -->
	<repositories>
		<repository>
			<id>maven</id>
			<name>maven.org</name>
			<url>http://repo1.maven.org/maven2</url>
		</repository>
		<repository>
			<id>sti-snapshots</id>
			<name>STI snapshots</name>
			<url>http://maven.sti2.at/archiva/repository/snapshots</url>
		</repository>
		<repository>
			<id>sti-external</id>
			<name>Maven STI external repository</name>
			<url>http://maven.sti2.at/archiva/repository/external</url>
		</repository>
		<repository>
			<id>ibiblio</id>
			<name>ibiblio.org</name>
			<url>http://mirrors.ibiblio.org/pub/mirrors/maven2</url>
		</repository>
		<repository>
			<id>openrdf-sesame</id>
			<name>OpenRDF Sesame repository</name>
			<url>http://repo.aduna-software.org/maven2/releases</url>
		</repository>
		<repository>
			<id>sun-java</id>
			<name>sun-java</name>
			<url>http://download.java.net/maven/2</url>
		</repository>
		<!-- used for saxon9 -->
		<repository>
			<id>phloc</id>
			<name>phloc</name>
			<url>http://repo.phloc.com/maven2/</url>
		</repository>
	</repositories>

	<!-- BUILD PROCESS -->
	<build>
		<!-- All childs inherit this plugins -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
			</plugin>
		</plugins>

		<!-- PLUGIN MANAGEMENT -->
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-enforcer-plugin</artifactId>
					<version>1.0</version>
					<configuration>
						<rules>
							<requireMavenVersion>
								<version>[3.0.0,)</version>
							</requireMavenVersion>
							<requireJavaVersion>
								<version>[1.6,)</version>
							</requireJavaVersion>
							<versionRule implementation="org.eclipse.jetty.toolchain.enforcer.rules.VersionRule" />
						</rules>
					</configuration>
					<executions>
						<execution>
							<id>enforce-java</id>
							<goals>
								<goal>enforce</goal>
							</goals>
						</execution>
					</executions>
					<dependencies>
						<dependency>
							<groupId>org.eclipse.jetty.toolchain</groupId>
							<artifactId>jetty-enforcer-rules</artifactId>
							<version>1.0</version>
						</dependency>
					</dependencies>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.3.2</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
						<profile>
							<activation>
								<jdk>1.6</jdk>
							</activation>
							<dependencies>
								<dependency>
									<groupId>javax.activation</groupId>
									<artifactId>activation</artifactId>
									<version>1.1</version>
									<scope>provided</scope>
								</dependency>
							</dependencies>
						</profile>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.1.1</version>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.8</version>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-eclipse-plugin</artifactId>
					<version>2.8</version>
					<configuration>
						<useProjectReferences>true</useProjectReferences>
						<downloadJavadocs>true</downloadJavadocs>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>2.6</version>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.1</version>
					<configuration>
						<!-- use local git repo -->
						<pushChanges>false</pushChanges>
						<localCheckout>true</localCheckout>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-scm-plugin</artifactId>
					<version>1.5</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
